{% style %}
.video-slider-wrapper {
  width: 100%;
}

.video-slider-heading {
  text-align: center;
  margin-bottom: 20px;
}

.video-slider {
  display: flex;
  gap: 16px;
  overflow-x: auto;
  scroll-snap-type: x mandatory;
  padding-bottom: 10px;
}

.video-slide {
  flex: 0 0 calc(25% - 12px); /* 4 in a row desktop */
  height: {{ section.settings.video_height }}px;
  position: relative;
  scroll-snap-align: start;
  cursor: pointer;
}

@media (max-width: 768px) {
  .video-slide {
    flex: 0 0 100%; /* 1 in a row mobile */
  }
}

.video-poster,
.video-player {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

.video-player {
  display: none;
}
{% endstyle %}

<div class="video-slider-wrapper">
  {% if section.settings.heading != blank %}
    <h2 class="video-slider-heading">{{ section.settings.heading }}</h2>
  {% endif %}

  <div class="video-slider">
    {% for block in section.blocks %}
      <div class="video-slide" {{ block.shopify_attributes }}>
        
        <!-- Poster -->
        <img
          class="video-poster"
          src="{{ block.settings.thumbnail | image_url }}"
          alt="Video thumbnail"
        >

        <!-- Video -->
        <video
          class="video-player"
          controls
          preload="metadata"
        >
          <source src="{{ block.settings.video_url }}" type="video/mp4">
        </video>

      </div>
    {% endfor %}
  </div>
</div>

<script>
document.querySelectorAll('.video-slide').forEach(slide => {
  const poster = slide.querySelector('.video-poster');
  const video = slide.querySelector('.video-player');

  poster.addEventListener('click', () => {
    poster.style.display = 'none';
    video.style.display = 'block';
    video.play();
  });

  video.addEventListener('pause', () => {
    if (video.currentTime === 0 || video.ended) {
      video.style.display = 'none';
      poster.style.display = 'block';
    }
  });
});
</script>

{% schema %}
{
  "name": "Video Slider Custom",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Video Slider"
    },
    {
      "type": "range",
      "id": "video_height",
      "label": "Video Height (px)",
      "min": 200,
      "max": 600,
      "step": 10,
      "default": 350
    }
  ],
  "blocks": [
    {
      "type": "video",
      "name": "Video Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "thumbnail",
          "label": "Thumbnail / Poster Image"
        },
        {
          "type": "url",
          "id": "video_url",
          "label": "Video URL (MP4)"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Video Slider Custom",
      "blocks": [
        { "type": "video" }
      ]
    }
  ]
}
{% endschema %}
